<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CustomerAddController">
   <children>
      <VBox layoutX="68.0" layoutY="44.0" spacing="20.0">
         <children>
            <HBox spacing="50.0">
               <children>
                  <Label prefWidth="65.0" text="Name" textAlignment="RIGHT" />
                  <TextField fx:id="nameTF" />
               </children>
            </HBox>
            <HBox spacing="50.0">
               <children>
                  <Label prefWidth="65.0" text="Phone" textAlignment="RIGHT" />
                  <TextField fx:id="phoneTF" />
               </children>
            </HBox>
            <HBox spacing="50.0">
               <children>
                  <Label prefWidth="65.0" text="Address" />
                  <TextField fx:id="addressTF" />
               </children>
            </HBox>
            <HBox spacing="50.0">
               <children>
                  <Label prefWidth="65.0" text="Postal Code" />
                  <TextField fx:id="postalTF" />
               </children>
            </HBox>
            <HBox spacing="50.0">
               <children>
                  <Label prefWidth="65.0" text="Country" />
                  <ComboBox fx:id="countryCombo" onAction="#onCountrySelection" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox spacing="50.0">
               <children>
                  <Label prefWidth="65.0" text="Division" />
                  <ComboBox fx:id="divisionCombo" prefWidth="150.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox layoutX="63.0" layoutY="333.0" spacing="25.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onSave" prefWidth="75.0" text="Save" />
            <Button mnemonicParsing="false" onAction="#onClear" prefWidth="75.0" text="Clear" />
            <Button mnemonicParsing="false" onAction="#onCancel" prefWidth="75.0" text="Cancel" />
         </children>
      </HBox>
   </children>
</AnchorPane>
